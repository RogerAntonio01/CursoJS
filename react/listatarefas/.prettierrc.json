{
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "always",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false,
    "vueIndentScriptAndStyle": false,
    "embeddedLanguageFormatting": "off",
    "eslintIntegration": true,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 4
        }
      },
      {
        "files": "*.md",
        "options": {
          "proseWrap": "always"
        }
      },
      {
        "files": "*.yaml",
        "options": {
          "tabWidth": 2
        }
      },
      {
        "files": "*.scss",
        "options": {
          "singleQuote": false
        }
      },
      {
        "files": "*.html",
        "options": {
          "printWidth": 120
        }
      }
    ]
  }
